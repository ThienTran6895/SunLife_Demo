@{
    ViewBag.Title = "Home Page";
}
@model SunLife.Web.Models.Customer

<h2 class="page-header">THÔNG TIN HỢP ĐỒNG</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin bên mua bảo hiểm</h6>
    </div>
    <div class="card-body">
        <div class="row" style="margin-bottom:15px;">
            <div class="col-md-2">
                Bên mua bảo hiểm:
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" value="@Model.Name" />
            </div>
            <div class="col-md-1">
                Tuổi:
            </div>
            <div class="col-md-1">
                <input type="text" class="form-control" value="@Model.Age" />
            </div>
            <div class="col-md-1">
                Giới tính:
            </div>
            <div class="col-md-2">
                <select name="gender" class="form-control">
                    <option value="male">Nam</option>
                    <option value="female">Nữ</option>
                </select>
            </div>
            <div class="col-md-2">
                Đơn vị tính: Đồng
            </div>
        </div>
        <table class="table table-bordered table-with-bg">
            <thead>
                <tr>
                    <th>Người được bảo hiểm</th>
                    <th>Ngày sinh</th>
                    <th>Tuổi/Giới tính</th>
                    <th>Nhóm nghề nghiệp</th>
                    <th>Sản phẩm bảo hiểm</th>
                    <th>Số tiền bảo hiểm</th>
                    <th>Thời hạn bảo hiểm (Năm)</th>
                    <th>Thời hạn đóng phí dự kiến(*) (Năm)</th>
                    <th>Phí bảo hiểm năm</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" class="form-control" id="txt_Name" value="@Model.Name" />
                    </td>
                    <td>
                        <input type="date" class="form-control" id="txt_Dob" value="@Model.Dob" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_Age" value="@Model.Age" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_Job" value="@Model.Job" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_ProfuctID" value="@Model.ProductID" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_PayMoney" value="@Model.PayMoney" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_Duration" value="@Model.Duration" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_PayDuration" value="@Model.PayDuration" />
                    </td>
                    <td>
                        <input type="text" class="form-control" id="txt_TaxPerYear" value="@Model.TaxPerYear" />
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Quý</th>
                    <th>Nửa năm</th>
                    <th>Năm</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Phí bảo hiểm cơ bản(1)</td>
                    <td><input type="text" class="form-control" id="txt_BasicIns_quy" value="@Model.BasicIns_quy" /></td>
                    <td><input type="text" class="form-control" id="txt_BasicIns_nuanam" value="@Model.BasicIns_nuanam" /></td>
                    <td><input type="text" class="form-control" id="txt_BasicIns_nam" value="@Model.BasicIns_nam" /></td>
                </tr>
                <tr>
                    <td>Phí bảo hiểm của (các) sản phẩm bổ sung (2)</td>
                    <td><input type="text" class="form-control" id="txt_AddItemIns_quy" value="@Model.AddItemIns_quy" /></td>
                    <td><input type="text" class="form-control" id="txt_AddItemIns_nuanam" value="@Model.AddItemIns_nuanam" /></td>
                    <td><input type="text" class="form-control" id="txt_AddItemIns_nam" value="@Model.AddItemIns_nam" /></td>
                </tr>
                <tr>
                    <td>Phí bảo hiểm định kì (3) = (1) + (2)</td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                </tr>
                <tr>
                    <td>Phí bảo hiểm đóng thêm dự kiến Năm hợp đồng 1 (4)</td>
                    <td><input type="text" class="form-control" id="txt_PayAdd_quy" value="@Model.PayAdd_quy" /></td>
                    <td><input type="text" class="form-control" id="txt_PayAdd_nuanam" value="@Model.PayAdd_nuanam" /></td>
                    <td><input type="text" class="form-control" id="txt_PayAdd_nam" value="@Model.PayAdd_nam" /></td>
                </tr>
                <tr>
                    <td>Phí bảo hiểm định kì dự kiến = (3) + (4)</td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                </tr>
            <tbody>
        </table>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin người được bảo hiểm</h6>
    </div>
    <div class="card-body">

        <table id="grid_infor" class="table table-bordered">
            <thead class="text-black" style="background: #CCCCCC;">
                <tr>
                    <th>Sản phẩm bảo hiểm</th>
                    <th>Sự kiện bảo hiểm</th>
                    <th>Giá trị chi trả (Đồng)</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td rowspan="3" style="vertical-align:middle">New URL</td>
                    <td>Tử vong</td>
                    <td>
                        Nếu chọn Gia tăng tiết kiệm: "Giá trị lớn hơn giữa <STBH> đồng và Giá trị tài khoản" Nếu chọn Gia tăng bảo vệ: Trước khi Người được bảo hiểm đạt 70 tuổi: "<STBH> đồng + Giá trị tài khoản" Kể từ khi Người được bảo hiểm đạt 70 tuổi: "Giá trị lớn hơn giữa <STBH> đồng và Giá trị tài khoản"
                    </td>
                    <td>
                        Nếu chọn Gia tăng bảo vệ: Kể từ khi Người được bảo hiểm đạt 70 tuổi, Hợp đồng sẽ tự động chuyển đối thành Quyền lợi Gia tăng tiết kiệm.
                    </td>
                </tr>
                <tr>
                    <td>Bị thương tật toàn bộ vĩnh viện</td>
                    <td>
                        Nếu chọn Gia tăng tiết kiệm: "Giá trị lớn hơn giữa <STBH> đồng và Giá trị tài khoản" Nếu chọn Gia tăng bảo vệ: "<STBH> đồng + Giá trị tài khoản"
                    </td>
                    <td>
                        - Nếu Người được bảo hiểm bị Thương tật toàn bộ vĩnh viễn trong thời gian hợp đồng bảo hiểm có hiệu lực và trước khi đạt 66 tuổi.
                    </td>
                </tr>
                <tr>
                    <td>Ung thư giai đoạn cuối</td>
                    <td>
                        Tạm ứng không tính lãi lên đến 50% Giá trị tài khoản, nhưng không vượt quá 500 triệu đồng.
                    </td>
                    <td>
                        - Trong thời gian tạm ứng, 100% Giá trị tài khoản bao gồm phần tạm ứng vẫn sẽ được tích lũy lãi. - Khoản tạm ứng sẽ được khấu trừ từ Giá trị tài khoản nếu Người được bảo hiểm còn sống sau 12 tháng, hoặc Quyền lợi tử vong/Thương tật toàn bộ vĩnh viễn nếu Người được bảo hiểm tử vong/ bị thương tật toàn bộ vĩnh viễn trong vòng 12 tháng kể từ ngày nhận tạm ứng.
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                <p>Ghi chú:</p>
                <p>
                    (*) Thời hạn đóng phí bằng Thời hạn bảo hiểm. Tuy nhiên, Bên mua bảo hiểm có thể đóng phí linh hoạt từ Năm hợp đồng thứ 4, tùy thuộc vào nhu cầu tiết kiệm và bảo vệ của mình. Việc giảm hoặc tạm ngưng đóng phí có thể dẫn đến hợp đồng mất hiệu lực do Giá trị tài khoản không đủ khấu trừ Phí bảo hiểm rủi ro hàng tháng.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <input id="btn_save" type="button" value="Lưu" class="btn btn-lg btn-primary btn-block" style="max-width:none;" />
    </div>
</div>
<br />
<script type="text/javascript">
    $(document).ready(function () {

        $('#btn_save').on('click', function () {
            var customer = {
                Name: "" + $('#1').val() + "",
                Dob: "" + $('#2').val() + "",
                Age: "" + $('#3').val() + "",
                Job: "" + $('#4').val() + "",
                ProductID: "" + $('#5').val() + "",
                PayMoney: "" + $('#6').val() + "",
                Duration: "" + $('#7').val() + "",
                PayDuaration: "" + $('#8').val() + "",
                TaxPerYear: "" + $('#9').val() + "",
                BasicIns_quy: "" + $('#10').val() + "",
                BasicIns_nuanam: "" + $('#11').val() + "",
                BasicIns_nam: "" + $('#12').val() + "",
                AddItemIns_quy: "" + $('#13').val() + "",
                AddItemIns_nuanam: "" + $('#14').val() + "",
                AddItemIns_nam: "" + $('#15').val() + "",
                PayAdd_quy: "" + $('#16').val() + "",
                PayAdd_nuanam: "" + $('#17').val() + "",
                PayAdd_nam: "" + $('#18').val() + "",

            };
            console.log(customer);

            $.ajax({
                type: "POST",
                dataType: "json",
                data: customer,
                url: '@Url.Action("AddCustomer", "Home")',
            });
        });

    });

</script>
<style type="text/css">
    input {
        margin: inherit;
    }

    h5 {
        margin: 15px 0 23px 0;
    }

    thead tr:first-child th {
        text-align: center;
        width: 150px;
    }
</style>
